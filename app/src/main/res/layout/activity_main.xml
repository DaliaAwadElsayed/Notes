<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.dalia.notes.MainActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="230dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView8"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="62dp"
        android:autofillHints="@android:color/background_dark"
        android:backgroundTint="#3a4de2"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        android:textColor="#000"

        android:textColorHint="#3c3f41"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"

        android:layout_below="@+id/username"
        android:layout_marginTop="18dp"
        android:autofillHints="@android:color/background_dark"
        android:backgroundTint="#3a4de2"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textColorHint="#3c3f41"
        android:textSize="12sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/password"
        android:layout_alignLeft="@+id/imageView10"
        android:layout_alignRight="@+id/password"
        android:layout_alignStart="@+id/imageView10"
        android:layout_below="@+id/password"
        android:layout_marginTop="29dp"
        android:background="#3a4de2"
        android:text="log in"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/singup"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="21dp"
        android:background="#3a4de1"
        android:text="sign up"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/notes" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/users"
        android:layout_alignTop="@+id/username"
        android:layout_toLeftOf="@+id/username"
        android:layout_toStartOf="@+id/username" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/password"
        android:layout_toLeftOf="@+id/password"
        android:layout_toStartOf="@+id/password"
        app:srcCompat="@drawable/locked" />

</RelativeLayout>
